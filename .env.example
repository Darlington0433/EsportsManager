# Database Configuration
# Set ESPORTS_DB_TYPE to either "sqlserver" or "mysql"
ESPORTS_DB_TYPE=sqlserver

# Connection string for SQL Server
# Format: Server=server_name;Database=database_name;User Id=username;Password=password;TrustServerCertificate=true;
ESPORTS_DB_CONNECTION=Server=localhost;Database=EsportsManager;Trusted_Connection=true;TrustServerCertificate=true;

# Uncomment and modify for MySQL connection
# ESPORTS_DB_CONNECTION=Server=localhost;Database=EsportsManager;Uid=root;Pwd=your_password;

# Environment Settings
# Use "Development", "Staging", or "Production"
ENVIRONMENT=Development

# Logging Settings
# Set to "true" or "false"
ENABLE_LOGGING=true
# Set to "Debug", "Information", "Warning", "Error", or "Critical"
LOG_LEVEL=Information
